extends ./components/template
block titulo
    - titulo=`${accion} Mantenimiento`;
block body
    include ./components/header
    .container.my-5
        h1.text-center #{accion} Mantenimiento
        form(action="procesar" method="post")
            .form-group
                label(for="patente") Patente del vehículo
                input(type="text" name="patente" class="form-control" value=`${info['patente_vehiculo']}` placeholder="Ingrese la patente del vehículo")
            .form-group
                label(for="fecha_inicio") Fecha de Inicio
                input(type="date" name="fecha_inicio" class="form-control" value=`${info['fecha inicio']}` placeholder="dd/mm/aaaa")
            .form-group
                label(for="fecha_final") Fin de service
                input(type="date" name="fecha_final" class="form-control" value=`${info['fecha final']}` placeholder="dd/mm/aaaa")
            .form-group
                label(for="kilometraje") Kilometraje
                input(type="number" name="kilometraje" class="form-control" value=`${info['kilometraje']}` placeholder="Ingrese el kilometraje del vehiculo al momento de ingresar al taller")
            .form-group
                label(for="costo") Costo
                input(type="number" name="costo" class="form-control" value=`${info['costo']}` placeholder="Ingrese el costo del mantenimiento")
            .form-group
                label(for="taller") Tipo de taller
                .form-check
                    input.form-check-input(type="radio" checked=interno id="interno" name="taller" value="Empresa")
                    label.form-check-label(for="interno") Interno
                .form-check
                    input.form-check-input(type="radio" checked=externo name="taller" id="externo")
                    label.form-check-label(for="externo") Externo
            .form-group
                    label(for="cuit_taller") CUIT del Taller:
                    input.form-control(type="number" id="taller" readonly name="cod_taller" value=`${info['cod_taller']}`)
            .form-group
                label(for="dni_mecanico") DNI del mecánico:
                input(type="number" name="dni_mecanico" value=`${info['dni_mecanico']}` class="form-control" placeholder="Ingrese el DNI del mecánico")
            .form-group
                label(for="proximo") Fecha del próximo service:
                input(type="date" class="form-control" name="fecha_proximo" placeholder="dd/mm/aaaa")
            .form-group
                label(for="repuestos") Repuestos cambiados:
                textarea.form-control(name="repuestos_cambiados") #{info['repuestos_cambiados']}
            if editar
                input(type="hidden" name="editar" value=`${info['codigo']}`)
                input(type="hidden" name="id_service" value=`${info['id_proximo']}`)
            button(type="submit" name="mantenimiento" class="btn btn-success") #{accion} Mantenimiento
    script(src="views/js/tipo_taller.js")
