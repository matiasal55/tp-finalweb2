extends ./components/template
block titulo
    - titulo=`${accion} Arrastres`;
block body
    include ./components/header
    .container.my-5
        h1.text-center Arrastre
        form(action="procesar" method="POST")
            .form-group
                label(for="patente") Patente
                input(type="text" name="patente" class="form-control" value=`${info['patente']}` placeholder="Ingrese su patente")
            .form-group
                 label(for="chasis") Número de Chasis
                 input(type="text" name="chasis" class="form-control" value=`${info['chasis']}` placeholder="Ingrese su número de chasis")
            .form-group
                 label(for="tipo_arrastre") Tipo de Arrastre
                 input(type="number" name="tipo_arrastre" class="form-control" value=`${info['tipo_arrastre']}` placeholder="Ingrese el tipo de arrastre")
            button(type="submit" name="enviarArrastre" class="btn btn-success") #{accion} Arrastre
